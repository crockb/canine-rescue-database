<h1>Favorite</h1>


<div class="view-class">
    {{each dogs}}
    <table>
        <thead>
        <th>Name</th>
        <th>Birthday</th>
        <th>Sex</th>
        <th>Breed</th>
        <th>Weight</th>
        <th>Status</th>
        </thead>
        <tbody>
            <tr>
                <td>{{name}}</td>
                <td class="center-column">{{birthday}}</td>
                <td class="center-column">{{sex}}</td>
                <td class="center-column">{{breed}}</td>
                <td class="center-column">{{weight}}</td>
                <td class="center-column">{{status}}</td>
				<td class="center-column"><a href="/canine-rescue/dog/{{dog_id}}">View Details</a></td>
                <td><button type="button" onclick="deleteFavorite({{this.dog_id}})">Remove</button></td>
            </tr>
        </tbody>
    </table>
    {{/each}}
</div>

<script src="/static/deleteFavorite.js"></script>