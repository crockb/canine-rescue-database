<h1>Favorites</h1>


<div class="view-class">
    <table>
        <thead>
        <th>Name</th>
        <th>Birthday</th>
        <th>Sex</th>
        <th>Breed</th>
        <th>Weight</th>
        <th>Status</th>
        </thead>
        <tbody>
            {{#each dogs}}
            <tr>
                <td>{{name}}</td>
                <td class="center-column">{{birthday}}</td>
                <td class="center-column">{{sex}}</td>
                <td class="center-column">{{breed}}</td>
                <td class="center-column">{{weight}}</td>
                <td class="center-column">{{status}}</td>
				<td class="center-column"><a href="/canine-rescue/dog/{{dog_id}}"><button type="button" class="btn">View Details</button></a></td>
                <td><button type="button" class="btn" onclick="deleteFavorite({{this.dog_id}})">Remove</button></td>
            </tr>
            {{/each}}
			<tr>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td><button type="button" class="btn">Add Dog</button></td>
			</tr>
		</tbody>
    </table>
</div>

<script src="/static/deleteFavorite.js"></script>